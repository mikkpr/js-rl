{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ESNext",
    "allowJs": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
